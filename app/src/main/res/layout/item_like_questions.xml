<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/like_questions_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/liked_question_card_padding"
    android:paddingRight="@dimen/liked_question_card_padding"
    android:gravity="top">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/appbar_padding_top"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/me_like_question_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liked_question_img_height"
                android:src="@drawable/broadcast_question_background1"
                android:scaleType="centerCrop"
                android:elevation="2dp"/>
            <RelativeLayout
                android:id="@+id/me_like_question_go_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liked_question_txt_height"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/liked_question_txt_margin"
                    android:id="@+id/linearLayout">
                    <TextView
                        android:id="@+id/me_like_question_title"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/liked_question_txt_dis"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/liked_answer_queTxt_size"
                        android:text="深夜食堂最能抚慰人心的食物是什么"/>
                    <TextView
                        android:id="@+id/me_like_question_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cdcdcd"
                        android:textSize="@dimen/liked_answer_ansTxt_size"
                        android:text="2017年3月19日22:00"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/me_like_question_go_btn"
                    android:layout_width="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_height="@dimen/liked_answer_detail_btn_margin"
                    android:src="@drawable/return2"
                    android:layout_marginEnd="@dimen/liked_question_txt_margin"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>